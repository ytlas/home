#!/usr/bin/env python3
# -*- coding: utf-8 -*-

from os import listdir
from os import popen

path = "/sys/class/net/"
output = popen("nmcli")
device = ""
dict = {}

line = output.readline()

device = line.partition(':')[0]
status = line.split(' ')[1]

if status == "connected":
    if device[0] == 'e': print("")

    elif device[0] == 'w': print('')

    else: print('Error')

else: print('<span color="red"></span>')
