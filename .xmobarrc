Config { font = "9x15"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopP 0 300
       , lowerOnStart = True
       , commands = [ Run Date "%H:%M:%S" "date" 10
		    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
		    , Run Memory ["-t","Mem: <usedratio>%"] 10
		    , Run Battery ["BAT0","BAT1"] 10
		    , Run StdinReader
		    , Run Com "getFancyVolume.sh" [] "volume" 10
		    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %volume% | %cpu% | %memory% | %date% | %battery%"
       }
