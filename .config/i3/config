set $mod Mod3
font pango:Ubuntu Monospace 18;Font Awesome 18
floating_modifier $mod
bindsym $mod+w kill
bindsym $mod+d exec "dmenu_run -fn 'Ubuntu Monospace 10' -nb black -sb orange -nf white -sf white -l 10"
bindsym $mod+b focus left
bindsym $mod+n focus down
bindsym $mod+p focus up
bindsym $mod+f focus right
bindsym $mod+Shift+b move left 50px
bindsym $mod+Shift+n move down 50px
bindsym $mod+Shift+p move up 50px
bindsym $mod+Shift+f move right 50px
bindsym $mod+g focus mode_toggle

# Workspace names
set $w1 "1"
set $w2 "2"
set $w3 "3"
set $w4 "4"
set $w5 "5"
set $w6 "6"
set $w7 "7"

bindsym Mod1+F2 exec "sudo chvt 2"
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7

bindsym $mod+t floating toggle

bindsym $mod+Shift+c restart
new_window none

assign [class="Emacs"] $w1
assign [class="Firefox"] $w2
assign [title="stat"] $w3
assign [class="TeamSpeak 3"] $w4
assign [class="Steam"] $w4
assign [title="media"] $w5
assign [class="google-chrome"] $w5
assign [class="VirtualBox"] $w6
for_window [title="xterm"] floating enable
for_window [title="nmtui"] floating enable
for_window [title="floating"] floating enable

bindsym $mod+Left exec "sudo ~/bin/abl -2"
bindsym $mod+Right exec "sudo ~/bin/abl +2"
bindsym $mod+Control+Left exec "adjkbacklight -"
bindsym $mod+Control+Right exec "adjkbacklight +"
bindsym $mod+Shift+Left exec "killall redshift"
bindsym $mod+Shift+Right exec "redshift"
bindsym $mod+Down exec "ponymix --max-volume 250 decrease 5"
bindsym $mod+Up exec "ponymix --max-volume 250 increase 5"
bindsym $mod+m exec "ponymix toggle"
bindsym $mod+e exec "emacs"
bindsym $mod+Return exec "urxvt -title floating"
bindsym $mod+Shift+Return exec "urxvt"
bindsym $mod+c exec "urxvt -e sh -c 'nmtui-connect'"
bindsym $mod+l exec 'i3lock-fancy'
bindsym $mod+0 exec 'firefox-esr'
bindsym $mod+8 fullscreen toggle
bindsym $mod+9 exec 'mps'
bindsym $mod+q exit
exec "xrdb $HOME/.Xresources"
exec "xmodmap $HOME/.Xmodmap"
exec "setxkbmap se"
exec "xset r rate 200 75"
exec "feh --bg-fill $HOME/Pictures/bg.jpg"
exec "urxvt -title 'stat' -e sh -c 'astat'"
# exec "urxvt -title 'stat' -e sh -c 'htop'"

# Colors
# set $background #131412
# set $foreground #ffffff
# set $fbackground #ff8c00

# Resize binds
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+Control+f resize grow width 10 px or 10 ppt
bindsym $mod+Control+b resize shrink width 10 px or 10 ppt
bindsym $mod+Control+p resize grow height 10 px or 10 ppt
bindsym $mod+Control+n resize shrink height 10 px or 10 ppt

