exec /usr/libexec/gnome-settings-daemon
# Initial setup
set $mod Mod3
font pango:Ubuntu Mono 13
floating_modifier $mod
new_window normal 0
hide_edge_borders both

# Execs
exec "feh --bg-fill $HOME/Documents/Pictures/bg.jpg"
#exec "urxvt -title stat -e sh -c 'sudo iftop'"
#exec "urxvt -title stat -e sh -c 'htop'"
#exec "urxvt -title stat -e sh -c 'astat'"

# General binds
bindsym $mod+w kill
bindsym $mod+b focus left
bindsym $mod+n focus down
bindsym $mod+p focus up
bindsym $mod+f focus right
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+g focus mode_toggle
bindsym $mod+t floating toggle
bindsym $mod+Shift+c restart

# Movement binds
bindsym $mod+Shift+b move left 50px
bindsym $mod+Shift+n move down 50px
bindsym $mod+Shift+p move up 50px
bindsym $mod+Shift+f move right 50px
bindsym $mod+Control+f resize grow width 10 px or 10 ppt
bindsym $mod+Control+b resize shrink width 10 px or 10 ppt
bindsym $mod+Control+p resize grow height 10 px or 10 ppt
bindsym $mod+Control+n resize shrink height 10 px or 10 ppt

# Application binds
bindsym $mod+Shift+Return exec "urxvt -title floating"
bindsym $mod+Return exec "urxvt"
bindsym $mod+c exec "urxvt -e sh -c 'nmtui-connect'"
bindsym Mod1+F2 exec "sudo chvt 2"
bindsym $mod+Left exec "sudo ~/bin/abl -2"
bindsym $mod+Right exec "sudo ~/bin/abl +2"
bindsym $mod+Control+Left exec "adjkbacklight -"
bindsym $mod+Control+Right exec "adjkbacklight +"
bindsym $mod+Shift+Left exec "killall redshift"
bindsym $mod+Shift+Right exec "redshift"
bindsym $mod+Down exec "ponymix --max-volume 250 decrease 5 && notify-send 'Decreasing...' `ponymix get-volume` -t 1000"
bindsym $mod+Up exec "ponymix --max-volume 250 increase 5 && notify-send 'Increasing...' `ponymix get-volume` -t 1000"
bindsym $mod+m exec "ponymix toggle"
bindsym $mod+e exec "emacs"
bindsym $mod+d exec "dmenu_run -fn 'Ubuntu Monospace 10' -nb black -sb white -nf white -sf black -l 10"
bindsym $mod+l exec 'lock'
bindsym $mod+Shift+l exec "lock 0"
bindsym $mod+y exec "scrot -s -e 'mv $f ~/www/'"
bindsym $mod+0 exec 'firefox-esr'
bindsym $mod+8 fullscreen toggle
bindsym $mod+9 exec 'mps'
bindsym $mod+q exit

# Workspace names
set $w1 "1:<span foreground='red'> I </span>"
set $w2 "2:<span foreground='green'>II </span>"
set $w3 "3:<span foreground='purple'>III</span>"
set $w4 "4:<span foreground='yellow'>IV </span>"
set $w5 "5:<span foreground='blue'> V </span>"
set $w6 "6:<span foreground='purple'>VI </span>"
set $w7 "7:<span foreground='purple'>VII</span>"

# Workspace binds
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7

# Assigns
assign [class="Firefox"] $w2
assign [class=".*Conkeror$"] $w2
assign [title="stat"] $w3
assign [class="TeamSpeak 3"] $w4
assign [class="Steam"] $w4
assign [title="media"] $w5
assign [class="mpv"] $w5
assign [class="google-chrome"] $w5
assign [class="VirtualBox"] $w6

# Conditions & actions
for_window [title="xterm"] floating enable
for_window [title="nmtui"] floating enable
for_window [title="floating"] floating enable
for_window [title="Chat"] floating enable
for_window [title="Spotify"] move container to workspace $w5

# Variables
set $background #131412
set $foreground #ffffff
set $inactive #4d4d4d
set $urgent #900000

# Style
client.focused $background $background $foreground $background $background
client.focused_inactive $background $background $foreground $background $background
client.unfocused $inactive $inactive $foreground $foreground	$foreground
client.urgent $urgent $urgent $foreground $urgent $urgent

# i3bar config
bar {
    status_command i3status
    font pango:Ubuntu Mono Regular 16
    separator_symbol " "
    strip_workspace_numbers yes
    colors {
	background $background
	statusline $foreground
	focused_workspace $background #ffffff $foreground
	active_workspace $background $background $foreground
	inactive_workspace $background $background $inactive
	urgent_workspace $urgent $background $foreground
    }
}
