#!/usr/bin/env python2
import subprocess
from os import *
import sys

nohup=popen('xsel').read()
if "twitch.tv" in nohup or "youtube.com" in nohup:
    subprocess.Popen("xterm -e 'livestreamer -p mpv "+nohup+" best'",shell=True,stdout=subprocess.PIPE).stdout.read()

elif ".torrent" in nohup or "magnet:" in nohup:
    subprocess.Popen("xterm -e \"peerflix -kd '"+nohup+"'\"",shell=True,stdout=subprocess.PIPE).stdout.read()

else:
    subprocess.Popen("xterm -e 'mpv $(youtube-dl -g '"+nohup+"')'",shell=True,stdout=subprocess.PIPE).stdout.read()