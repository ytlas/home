#! /bin/sh

if xdo id -a "$PANEL_WM_NAME" > /dev/null ; then
	printf "%s\n" "The panel is already running." >&2
	exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

bspc config top_padding $PANEL_HEIGHT
bspc subscribe report > "$PANEL_FIFO" &
xtitle -sf 'T%s' > "$PANEL_FIFO" &
while [ 1 ];do date +"S%H:%M:%S %Y-%m-%d %a";sleep 1;done > "$PANEL_FIFO" &
while [ 1 ];do printf V&&pactl list sinks | grep '^[[:space:]]Volume:' |     head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,';sleep 1;done > "$PANEL_FIFO" &
if [ -d /sys/class/backlight/intel_backlight ];then
    while [ 1 ];do echo "($(cat /sys/class/backlight/intel_backlight/brightness) * 100 / $(cat /sys/class/backlight/intel_backlight/max_brightness) * 100)/100"|bc;sleep 5;done > "$PANEL_FIFO" &
fi
if [ -d /sys/class/power_supply/BAT0 ] && [ -f /usr/bin/acpitool ];then
    while [ 1 ];do printf Ã–&&acpitool|grep 'All batteries'|grep -o '[0-9]\+'|head -n 1;sleep 60;done > "$PANEL_FIFO" &
fi
. ~/.config/bspwm/panel_colors

~/bin/panel_bar < "$PANEL_FIFO" | lemonbar -a 32 -n "$PANEL_WM_NAME" -g x$PANEL_HEIGHT -f "$PANEL_FONT" -F "$COLOR_DEFAULT_FG" -B "$COLOR_DEFAULT_BG" | sh &

wid=$(xdo id -a "$PANEL_WM_NAME")
tries_left=20
while [ -z "$wid" -a "$tries_left" -gt 0 ] ; do
	sleep 0.05
	wid=$(xdo id -a "$PANEL_WM_NAME")
	tries_left=$((tries_left - 1))
done
[ -n "$wid" ] && xdo above -t "$(xdo id -N Bspwm -n root | sort | head -n 1)" "$wid"

wait
